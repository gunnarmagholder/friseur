<h1>Listing appointments</h1>

<table>
  <tr>
    <th>App date</th>
    <th>App time</th>
    <th>Customer</th>
    <th>Employee</th>
    <th>Product</th>
    <th>Notes</th>
    <th>Confirmed</th>
    <th>Telephone</th>
    <th>Email</th>
    <th>Custname</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.app_date %></td>
    <td><%= appointment.app_time %></td>
    <td><%= appointment.customer_id %></td>
    <td><%= appointment.employee %></td>
    <td><%= appointment.product_id %></td>
    <td><%= appointment.notes %></td>
    <td><%= appointment.confirmed %></td>
    <td><%= appointment.telephone %></td>
    <td><%= appointment.email %></td>
    <td><%= appointment.custname %></td>
    <td><%= link_to 'Show', appointment %></td>
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Destroy', appointment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

